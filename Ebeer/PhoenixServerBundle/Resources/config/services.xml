<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ebeer.twig.phoenix_extension" class="Ebeer\PhoenixServerBundle\Twig\Extension\PhoenixExtension">
            <tag name="twig.extension" />
            <argument type="service" id="ebeer.phoenix.loader" />
        </service>
        <service id="ebeer.phoenix.loader" class="Phoenix\Loader\Loader" factory-class="Phoenix\Loader\Loader" factory-method="init">
            <argument>%phoenix.config%</argument>
        </service>
    </services>
</container>
